{
  "Statement": [
    {
      "Action": ["organizations:*"],
      "Effect": "Allow",
      "Resource": ["*"],
      "Sid": "AllowOrgManagement"
    },
    {
      "Action": [
        "iam:ListAccountAliases",
        "iam:CreateAccountAlias",
        "iam:DeleteAccountAlias"
      ],
      "Effect": "Allow",
      "Resource": ["*"],
      "Sid": "AllowAliasAdmin"
    },
    {
      "Action": ["iam:CreateServiceLinkedRole"],
      "Effect": "Allow",
      "Resource": ["arn:aws:iam::*:role/aws-service-role/*"],
      "Sid": "AllowServiceLinkedRoleCreation"
    },
    {
      "Action": [
        "iam:GetRole",
        "iam:CreateRole",
        "iam:DetachRolePolicy",
        "iam:DeleteRole",
        "iam:ListAttachedRolePolicies",
        "iam:ListInstanceProfilesForRole",
        "iam:ListRolePolicies",
        "iam:AttachRolePolicy",
        "iam:UpdateAssumeRolePolicy",
        "iam:TagRole"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:iam::*:role/Billing",
        "arn:aws:iam::*:role/*Terraform*"
      ],
      "Sid": "AllowRoleManagement"
    },
    {
      "Action": [
        "iam:CreatePolicy",
        "iam:CreatePolicyVersion",
        "iam:DeletePolicy",
        "iam:DeletePolicyVersion",
        "iam:ListPolicyVersions",
        "iam:GetPolicy",
        "iam:GetPolicyVersion"
      ],
      "Effect": "Allow",
      "Resource": ["arn:aws:iam::*:policy/*Terraform*"],
      "Sid": "AllowIamCreateTerraformPolicy"
    },
    {
      "Action": [
        "iam:GetUser",
        "iam:AttachUserPolicy",
        "iam:DetachUserPolicy",
        "iam:ListAttachedUserPolicies",
        "iam:ListInstanceProfilesForRole"
      ],
      "Effect": "Allow",
      "Resource": ["arn:aws:iam::*:user/terraform-init"],
      "Sid": "AllowIamAttachTerraformPolicy"
    },
    {
      "Action": [
        "guardduty:EnableOrganizationAdminAccount",
        "guardduty:CreateDetector",
        "guardduty:ListDetectors",
        "guardduty:DisableOrganizationAdminAccount",
        "guardduty:ListOrganizationAdminAccounts"
      ],
      "Effect": "Allow",
      "Resource": ["*"],
      "Sid": "AllowGuardDutyManagement"
    },
    {
      "Action": [
        "guardduty:DeleteMembers",
        "guardduty:GetMasterAccount",
        "guardduty:UpdateDetector",
        "guardduty:DisassociateMembers",
        "guardduty:GetMembers",
        "guardduty:UpdateOrganizationConfiguration",
        "guardduty:GetDetector",
        "guardduty:AcceptInvitation",
        "guardduty:StopMonitoringMembers",
        "guardduty:StartMonitoringMembers",
        "guardduty:CreateMembers",
        "guardduty:DescribeOrganizationConfiguration",
        "guardduty:DeleteDetector",
        "guardduty:InviteMembers",
        "guardduty:ListMembers"
      ],
      "Effect": "Allow",
      "Resource": ["arn:aws:guardduty:*:*:detector/*"],
      "Sid": "AllowGuardDutyDetectorManagement"
    },
    {
      "Action": ["sts:AssumeRole"],
      "Effect": "Allow",
      "Resource": ["arn:aws:iam::*:role/OrganizationAccountAccessRole"],
      "Sid": "AllowRoleAssumptionToOrgAccounts"
    }
  ],
  "Version": "2012-10-17"
}
